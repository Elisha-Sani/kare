datasource db {
  provider = "postgresql" // or "mysql" if you prefer
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model RequestEvent {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String
  eventType   String
  message     String
  approved    Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  message   String
  rating    Int       @default(5) // out of 5 stars
  approved  Boolean   @default(false)
  createdAt DateTime  @default(now())
}
